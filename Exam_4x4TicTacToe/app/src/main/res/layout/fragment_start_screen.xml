<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/mainActivity">


    <Button
            android:text="Start Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/player2Name"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/startAI"
            tools:layout_editor_absoluteX="139dp"/>
    <Button
            android:text="Start game against AI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startAI"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/startBtn"
            tools:layout_editor_absoluteX="110dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:autofillHints="Player 1"
            android:text=""
            android:ems="10"
            android:id="@+id/player1Name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gameTitle"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/player2Name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/player2Name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/player1Name"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/startBtn"/>
    <TextView
            android:text="4x4 TicTacToe"
            android:textSize="20pt"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameTitle"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Player 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            app:layout_constraintEnd_toStartOf="@+id/player1Name"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.333"/>
    <TextView
            android:text="Player 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/player2Name"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.333"/>



</android.support.constraint.ConstraintLayout>